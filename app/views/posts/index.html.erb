<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th class= "title is-1">Titulo</th>
      <th>Author</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.author %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post, class: "button is-warning" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "button is-info" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Tem certeza disso?' }, class: "button is-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "button is-primary is-large" %>
